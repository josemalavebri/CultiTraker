<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoregar"
    tools:context=".Activity.regar.RegarFormularioActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="308dp"
        android:layout_height="442dp"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="407dp"
            android:layout_margin="8dp"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@android:color/white"
            android:clipToOutline="true"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/minecrafter"
                android:gravity="center"
                android:text="Nuevo Riego"
                android:textColor="#009688"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/txt_Hora"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="monospace"
                android:hint="Hora"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#323732"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_CantidadAgua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="monospace"
                android:hint="Cantidad de agua"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#423C3C"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_TipoRiego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="monospace"
                android:hint="Tipo de riego"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#383030"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:fontFamily="monospace"
                    android:onClick="agregarDatos"
                    android:text="Guardar"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#F44336"
                    android:fontFamily="monospace"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
