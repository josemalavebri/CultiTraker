<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/piedra"
    tools:context=".Activity.insumo.InsumoFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="false"
        android:background="@drawable/rounded_purple_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="#FFFFFF"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/txt_nuevoParcela"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10sp"
                android:text="Nuevo Insumo"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_NombreInsumo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#000000" />

            <Spinner
                android:id="@+id/txt_TipoInsumo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/custom_edittext"
                android:padding="12dp" />

            <EditText
                android:id="@+id/txt_CantidadInsumo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:hint="Cantidad"
                android:inputType="number"
                android:padding="12dp"
                android:textColorHint="#040404" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_FechaInsumo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edittext"
                    android:clickable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Fecha"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColorHint="#070707" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_FechaInsumo"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:textColorHighlight="@color/blue"
                    android:textColorLink="@color/blue"
                    app:backgroundTint="@color/blue"
                    app:icon="@android:drawable/ic_menu_today"
                    app:iconSize="30dp"
                    app:iconTint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_Guardar"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple"
                    android:fontFamily="sans-serif-black"
                    android:text="Guardar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_Cancelar"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/design_default_color_error"
                    android:fontFamily="sans-serif-black"
                    android:text="Cancelar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>